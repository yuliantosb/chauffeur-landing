---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Payment Success`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-5xl">
          <span class="sr-only">Success</span>
          <span class="text-primary">Payment Success</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Thank you for the payment</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">You can close this page</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>
